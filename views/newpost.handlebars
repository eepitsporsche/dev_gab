{{! Create New Blog Post }}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto text-left">

            <form class="createPostForm">

                {{! Title Entry }}
                <div class="mt-5 mb-3">
                    <label class="form-label text-light">Enter Your Blog Title:</label>
                    <input class="form-control" id="new_post_title" maxlength="50"/>
                </div>

                {{! Body Entry }}
                <div class="mb-3">
                    <label class="for-label text-light">Enter Your Blog Post:</label>
                    <textarea class="form-control" rows="10" id="new_post_body"></textarea>
                </div>

                {{! Submit Button }}
                <div class="text-center">
                    <button type="submit" class="text-center mt-3 btn btn-dark btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>