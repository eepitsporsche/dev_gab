{{! Blog Dashboard }}

<div class="row">
    <div class="text-center mx-auto pt-2">
        <h2>Dashboard</h2>        
    </div>
</div>

{{! Render User's Blog Posts}}
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto mt-5">
                {{#if posts.length}}
                {{#each posts}}
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="card text-dark shadow mb-3">
                            <div class="text-center mx-auto p-3">
                                {{! Render the Blog Post Title, Author Username, Date Created, and Description }}
                                <h2><a href="/post/{{id}}">{{title}}</a></h2>
                                    <p>by {{user.name}} on {{format_date date_created}}</p>
                                        <p>{{content}}</p>
                                {{! Render Edit and Delete Buttons }}
                                <a href="/editpost/{{id}}" class="edit-link">
                                <button class="btn btn-dark" style="width: 120px" data-id="{{id}}" id="edit_button">Edit Post</button></a>
                                <button class="btn btn-dark delete_button" style="width: 120px" data-post-id="{{id}}" id="delete_post_button">Delete Post</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

                {{else}}
                <h4 class="mb-4">No posts yet...</h4>
                {{/if}}
            </div>
        </div>
    </div>

{{! Create New Post Button}}
<div class="container">
    <div class="row text-center">
        <a href="/newpost"><button class="btn btn-dark my-3">Create a post!</button></a>
    </div>
</div>