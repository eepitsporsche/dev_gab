{{! Blog Dashboard }}

<div class="row">
    <div class="text-center mx-auto pt-2 user-name">
        <h2 id="blogName">{{name}}'s Blog</h2>        
    </div>
</div>

{{! Render User's Blog Posts}}
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto text-left mt-5">
                {{#if blogPosts.length}}
                {{#each blogPosts as |blogPost|}}
                    {{! Link Partial to Render Each Blog Post}}
                    {{> dashboardBlogPost}}
                    <br>
                {{/each}}
                {{/if}}
            </div>
        </div>
    </div>

    {{! Link Helper to Verify User ID}}
    {{#if (user_auth user.id userID)}}
    <div class="container">
        <div class="row text-center">
            <a href="/createPost"><button class=btn btn-dark mt-3>Create a post!</button></a>
            <br>
            <br>
            <br>
            <br>
            <br>
        </div>
    </div>
    {{else}}
    <div class="container">
        <div class="row justify-content-center">
            <p>No posts yet :[</p>
        </div>
    </div>
    {{/if}}
</div>

<script src="/js/blogDashboard.js"></script>