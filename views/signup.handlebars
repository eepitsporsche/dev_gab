{{! Create New Account Form }}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center form_header">Create an Account</h2>
                <form class="form new_account_form" id="new_account_form">
                    <div class="form-group mb-2 create_account_box">
                        <input class="form-control" type="text" id="new_account_username" placeholder="Enter a Username"/>
                    </div>
                    {{! Email Field }}
                    <div class="form-group mb-2 create_account_box">
                        <input class="form-control" type="text" id="new_account_email" placeholder="Enter Your Email"/>
                    </div>
                    {{! Password Field }}
                    <div class="form-group mb-2 create_account_box">
                        <input class="form-control" type="password" id="new_account_password" placeholder="Enter A Password"/>
                    </div>
                    {{! Submit Button }}
                    <div class="form-group create_account_box">
                        <button class="btn btn-secondary" type="submit">Create Account</button>
                    </div>
                </form>

                {{! Login Button for Existing Users}}
                <div class="d-flex justify-content-center">
                    <div class="card mt-3 py-2 px-3" style="width: 100%">
                        <h5 class="mb-2">Already have an account?</h5>
                        <a href="/login"><button class="btn btn-secondary" type="submit">Login</button></a>
                    </div>
                </div>
        </div>
    </div>
</div>